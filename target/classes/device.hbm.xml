<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.klu.jfsd.exam.Device" table="device">
		<id name="id">
			<generator class="native" />
		</id>
		<discriminator column="model" type="string" />
		<property name="brand" />
		<property name="price" />
		<subclass name="com.klu.jfsd.exam.Smartphone" discriminator-value="phone">
			<property name="os" />
			<property name="cameraResolution" />
		</subclass>
		<subclass name="com.klu.jfsd.exam.Tablet" discriminator-value="tablet">
			<property name="screenSize" />
			<property name="batteryLife" />
		</subclass>
	</class>
</hibernate-mapping>
